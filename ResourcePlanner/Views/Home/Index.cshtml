@{
    ViewBag.Title = "Home Page";
}
@Scripts.Render("~/bundles/orderData")
<div class="jumbotron">

</div>
<div data-ng-app="orderData">
    <div class="row" data-ng-controller="orderDataController">
        <div class="col-lg-5" data-ng-repeat="order in orders | orderBy: Name">
            <label for="order-{{order.Heroes.Id}}">{{order.Heroes.Name}}</label>
            <label for="order-{{order.Location}}">{{order.Location}}</label>
            <label for="order-{{order.StartTime}}">{{order.StartTime}}</label>
            <label for="order-{{order.EndTime}}">{{order.EndTime}}</label>
            <label for="order-{{order.Description}}">{{order.Description}}</label>
        </div>
    </div>
</div>